<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="TextBlock" x:Key="MovieTitleHeaderStyle">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="DemiBold" />
        <Setter Property="FontFamily" Value="Roboto" />
        <Setter Property="Foreground" Value="White" />
    </Style>
    
    <Style TargetType="TextBlock" x:Key="RegularTextStyle">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontWeight" Value="Light" />
        <Setter Property="FontFamily" Value="Roboto" />
        <Setter Property="Foreground" Value="White" />
    </Style>
    
    <Style TargetType="TextBlock" BasedOn="{StaticResource RegularTextStyle}" x:Key="HeaderTextStyle">
        <Setter Property="FontSize" Value="30" />
    </Style>

    <Style TargetType="TextBlock" BasedOn="{StaticResource RegularTextStyle}" x:Key="SmallHeaderTextStyle">
        <Setter Property="FontSize" Value="24" />
    </Style>
</ResourceDictionary>